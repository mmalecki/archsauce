#!/usr/bin/env bash

install_from_aur() {
  package="$1"
  curl "https://aur.archlinux.org/packages/$(echo $package | cut -c1-2)/$package/$package.tar.gz" | tar -zxf-
  cd "$package"
  makepkg -s
  sudo pacman -U "$package-*.xz"
  cd ..
  rm -rf "$package"
}

# install packages I use
sudo pacman -S --needed base-devel whois dnsutils gvim zsh strace awesome alsa-utils chromium clang clang-analyzer keychain tcpdump kexec-tools ghc openbsd-netcat xorg-server xorg-xinit awesome clojure wpa_actiond mosh nmap ctags wget pass acpi acpid tor scrot transmission-cli hdparm pcsclite ccid iperf ifplugd lsof cpio parted fuse rsync cmake pulseaudio cronie perf firefox mongodb bzr parallel mercurial gdb zip unzip docker imagemagick gimp xorg-xrandr vlc mplayer go texlive-most

# install yaourt with its dependencies, if not already installed
pacman -Q package-query || install_from_aur package-query
pacman -Q yaourt || install_from_aur yaourt

yaourt -S physlock ttf-inconsolata-dz scrub uuid google-talkplugin

sudo systemctl enable pcscd

mkdir -p "$HOME/.local/share/applications"
xdg-mime default /usr/share/applications/firefox.desktop x-scheme-handler/http
xdg-mime default /usr/share/applications/firefox.desktop x-scheme-handler/https
xdg-mime default /usr/share/applications/firefox.desktop text/html
